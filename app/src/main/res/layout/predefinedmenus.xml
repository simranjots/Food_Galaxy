<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/predefinedmenuList"
    android:background="@drawable/menu_back"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    
    <TextView
        android:id="@+id/PMenu_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Name"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/PMenu_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/PMenu_Name"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Price" />

    <TextView
        android:id="@+id/pquantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Quantity"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_alignRight="@+id/PMenu_Name"/>

    <TextView
        android:id="@+id/pquantityNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pquantity"/>

</RelativeLayout>